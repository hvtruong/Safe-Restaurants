<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MapsActivity" />

    <Button
        android:id="@+id/listToggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="0dp"
        android:gravity="bottom"
        android:shadowColor="#FFFFFF"
        android:text="@string/list_view" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:background="@drawable/white_background"
        android:id="@+id/search_bar">
        
        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:src="@drawable/search_icon_foreground"
            android:id="@+id/search_icon"
            />
        
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/search_icon"
            android:layout_centerVertical="true"
            android:textSize="16sp"
            android:textColor="#000"
            android:id="@+id/search_content"
            android:imeOptions="actionSearch"
            android:inputType="textCapSentences"
            />
        
    </RelativeLayout>

    <TextView
        android:id="@+id/textCritical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:textColor="#000"
        android:layout_marginStart="12dp"
        android:layout_marginTop="62dp"
        android:layout_marginLeft="5dp"
        android:text="@string/critical_Issues"
        android:background="@drawable/white_background"/>

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/textCritical"
        android:background="@drawable/white_background"
        android:layout_marginStart="102dp"
        android:layout_marginBottom="645dp" />

</RelativeLayout>